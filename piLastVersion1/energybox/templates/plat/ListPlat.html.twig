                                                        <td>{{ i.prix}}</td>
                                                        <td>{{ i.description}}</td>
                                                        <td>{{ i.calories}}</td>
                                                        <td>{{ i.etat}}</td>
                                                        <td>{{ i.categories}}</td>
                                                        <td>{{ i.nbp}}</td>
                                                        
