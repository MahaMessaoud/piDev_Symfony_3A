
{% extends 'baseFront.html.twig' %}

{% block title %}EnergyBox |Competition{% endblock %}

{% block body %}
<div class="slider-area2">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 pt-70 text-center">
                        <h2>Compétitions | {{ competition.nomCompetition }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br><br><br><br><br><br>
<section class="services-area pt-100 pb-150">
    <section class="wantToWork-area w-padding">
        <div class="container">
            <div class="row align-items-end justify-content-between">
                <div class="col-lg-6 col-md-10 col-sm-10">
                    <div class="section-tittle">
                        <span>Compétition</span>
                        <h2>{{ competition.nomCompetition }}</h2>
                    </div>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-3">
                    <a href="{{ path('app_competition_showFront') }}" class="btn wantToWork-btn f-right">Liste des Compétitions</a>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">       
                <a class="d-inline-block">
                    <h3>Frais De Competition en Dinar</h3>
                    <p>{{ competition.fraisCompetition }}</p>
                </a>
                <br>
                <a class="d-inline-block">
                    <h3>Date Compétition</h3>
                    <p>{{ competition.dateCompetition ? competition.dateCompetition|date('Y-m-d') : '' }}</p>
                </a>
                <br>
                <a class="d-inline-block">
                    <h3>Nombre Maximum D'inscrit</h3>
                    <p>{{ competition.nbrMaxInscrit }}</p>
                </a>
                <br>
                <a class="d-inline-block">
                    <h3>Nombre D'inscrit</h3>
                    <p>{{ competition.nbrParticipant }}</p>
                </a>     
                <br>
                <a class="d-inline-block">
                    <h3>Etat Competition</h3>
                    <p>{{ competition.etatCompetition }}</p>
                </a> 
            </div>
            <div align="center">
                <a href="{{path('app_competition_showFront') }}" class="btn">Retour à la liste des competitions</a>
                <a style="margin-left:20px;" href="{{ path('app_ticket_Front', {'id': competition.id}) }}" class="btn"> Obtenir Ma Ticket </a>
            </div>
        </div>                
    </div>
</section>

{% endblock %}

