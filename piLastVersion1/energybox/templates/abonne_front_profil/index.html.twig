{% block body %}
    <div class="header-area " style="background-color: black;">
        {% include 'baseNav.html.twig' %}
    </div>
    {% if app.user %}
        {% set img=app.user.image %}
        <!--<div class="container" style="box-shadow:0 0 10px; ">-->
        <div class=" d-block pt-3">
            <img class="rounded-circle mx-auto d-block" src="{{ asset(img) }}"  width="150" height="150"alt="Card image cap">
        </div>
        <div class="col-lg-12 col-xlg-5 col-md-12" style=" margin-left: 500px;">

        <div class="card col-lg-5" style="margin-top: 90px;">
        <div class="card-body">
        <div class="form-group mb-4">

            <label class="col-md-12 p-0" style="font-size: large"><strong>Full Name</strong></label>
            <div class="col-md-12 border-bottom p-0">
                <h4> {{ app.user.username }} </h4></div>
        </div>
        <div class="form-group mb-4">
            <label for="example-email" class="col-md-12 p-0"
                   style="font-size: large"><strong>Email</strong></label>
            <div class="col-md-12 border-bottom p-0">
                <h4>{{ app.user.email }}</h4>
            </div>
        </div>
        <div class="form-group mb-4">
            <label class="col-md-12 p-0" style="font-size: large"><strong>Phone No</strong></label>
            <div class="col-md-12 border-bottom p-0">
                <h4>  {{ app.user.numtel }}</h4>
            </div>
        </div>
        <div class="form-group mb-4">
            <label class="col-md-12 p-0" style="font-size: large"><strong>Birth date</strong></label>
            <div class="col-md-12 border-bottom p-0">
                <h4>{{ app.user.dateN ? app.user.dateN|date('Y-m-d') : '' }}</h4>
            </div>
        </div>

        <div class="form-group mb-4">
            <label class="col-md-12 p-0" style="font-size: large"><strong>Competitions</strong></label>
            <div class="col-md-12 border-bottom p-0">
                <h4>
                    {% for competition in app.user.competitions %}
                        {{ competition.nomCompetition }} <br>
                    {% endfor %}
                </h4>
            </div>

        <button type="button" class="btn btn-danger " style="margin-left: 260px;">
            <i class="fa fa-magic"></i>&nbsp;
            <a href=" {{ path('app_user_edit', {'id': app.user.id}) }} ">edit</a>
        </button>

    
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endif %}
    </div>
    </div>
    </div>
    <!--</div>-->

{% endblock %}