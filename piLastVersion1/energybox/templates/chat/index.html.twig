{%block stylesheets%}
<style>
#chat2 .form-control {
border-color: transparent;
}

#chat2 .form-control:focus {
border-color: transparent;
box-shadow: inset 0px 0px 0px 1px transparent;
}

.divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;

}</style>
<!-- Font Awesome -->
<link
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
<!-- Google Fonts -->
<link
href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css" rel="stylesheet"/>
{%endblock%}

{% block body %}
	<section style="background-color: #eee;">

		<div class="container py-5">

			<div class="row d-flex justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-6">
					{{ form_start(form) }}

					<div class="card" id="chat2">
						<div class="card-header d-flex justify-content-between align-items-center p-3">
							<h5 class="mb-0">ENERGYBOX</h5>
							<button type="button" class="btn " style="background-color:#720000 ;color:white;">Let's Chat
							</button>
						</div>
						<div class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative; height: 400px">
							<div class="d-flex flex-row justify-content-start"></div>
							<div class="d-flex flex-row justify-content-end mb-4 pt-1">
								<div>
									<p class="small p-2 me-3 mb-1 text-white rounded-3" style="background-color:#720000;">{{ message }}</p>
									<p></p>
								</p>

							</div>
							<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava4-bg.webp" alt="avatar 1" style="width: 45px; height: 100%;">
						</div>
					</div>
					<div class="card-footer text-muted d-flex justify-content-start align-items-center p-3" style="margin-top:120px;">
						<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3-bg.webp" alt="avatar 3" style="width: 40px; height: 100%;">
						{{ form_widget(form,{'attr':{'class':'form-control'}}) }}

						<button type="submit-info" class="btn" style=" background-color: #720000;">
							<i class="fa-brands fa-telegram" style="color:white;"></i>
						</button>

						<br>
					</div>
				</div>

			</div>
			{{ form_end(form) }}

		</div>

	</div>
</section>{% endblock %}{% block javascripts %}
<!-- MDB -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>{% endblock %}
