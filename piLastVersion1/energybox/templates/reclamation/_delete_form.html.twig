<form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" onsubmit="return confirm('Êtes vous sûr de supprimer cette réclamation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
    <button style="margin-top:-18px; margin-right:36px" class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Supprimer">
        <i class="zmdi zmdi-delete"></i>
    </button>
</form>
