{% block body %}
    <div class="card" style="margin-top: 20px;">
        <div class="card-body">
            <div class="form-group mb-4">
                {{ form_start(form,{attr:{novalidate:'novalidate'} }) }}
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" style="font-size: large"><strong>Username</strong></label>
                    <div class="col-md-12 border-bottom p-0">
                        {{ form_widget(form.username,{'attr':{'class':'form-control p-0 border-0'}}) }}
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label for="example-email" class="col-md-12 p-0"
                           style="font-size: large"><strong>Email</strong></label>
                    <div class="col-md-12 border-bottom p-0">
                        {{ form_widget(form.email,{'attr':{'class':'form-control p-0 border-0'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label for="example-email" class="col-md-12 p-0"
                           style="font-size: large"><strong>roles</strong></label>
                    <div class="col-md-12 border-bottom p-0">
                        {{ form_widget(form.roles,{'attr':{'class':'form-control p-0 border-0'}}) }}
                        {{ form_errors(form.roles) }}
                    </div>
                </div>

                <div style="margin-top: 20px; ">
                    <button class="btn ">{{ button_label|default('Save') }}</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}