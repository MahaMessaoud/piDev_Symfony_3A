{% block body %}
	<div class="limiter">
		<div class="container-login100" style="background-image: url('./frontOffice/img/gallery/gallery1.png'); opacity: 1;">
			<div class="wrap-login100 p-t-30 p-b-50">
				<span class="login100-form-title p-b-41">
					ENERGYBOX<br>____________<br><br>
					Account Login
				</span>

				<form class="login100-form validate-form p-b-33 p-t-5" id="contact-form" method="POST">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<div class="wrap-input100 validate-input" data-validate="Enter username">
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input100" autocomplete="email" placeholder="E-mail"/>
						<span class="focus-input100" data-placeholder="&#xe82a;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<input type="password" name="password" id="inputPassword" class="form-control input100" autocomplete="current-password" placeholder="Password"/>
						<span class="focus-input100" data-placeholder="&#xe80f;"></span>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="container-login100-form-btn m-t-32 submit-info">
						<button class="login100-form-btn" type="submit" style="margin-left: -50px;">
							Login
						</button>

						{#   <button  type="submit">
																		                            <a href="{{ path('app_registerChoices') }}" style="color: #720000">choisir le type!</a>
																		                        </button>#}
						<button type="submit" style="margin-top: 50px; margin-left: -200px;">
							<a href=" {{ path ('app_forgot_password_request') }}" style="color: #720000">forgot password!</a><br>
							<a href=" {{ path ('app_registerChoices') }}" style="color: #720000">enregistrer selon votre type!</a><br>

						</button>
					</div>
				</form>
				<a href="{{ path('app_chat') }}" style="color: #720000">
				
				<img src="{{ asset('./Loginassets/images/robot.png') }}" style="margin-top:40px;position:absolute;margin-left:850px;">
			</a>
		</div>
	</div>
