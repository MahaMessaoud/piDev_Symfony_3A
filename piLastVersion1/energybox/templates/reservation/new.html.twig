{% extends 'baseFront.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
{% endblock %}

{% block body %}
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Bienvenue chez EnergyBox Restaurant_Réservations</h2>
                        </div>
                        <div class="col-auto">
                            <a href="{{ path('app_our_menu') }}"  class="btn btn-outline-dark"><i class="fa fa-arrow-left"></i> Retourner à la page de menus</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section-tittle">
        <span>Créer une nouvelle réservation</span>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight: true,
            });
        });
    </script>
{% endblock %}




