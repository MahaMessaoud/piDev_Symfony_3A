{% extends 'baseFront.html.twig' %}

{% block title %}EnergyBox | Pack {% endblock %}

{% block body %}
	<!--? Hero Start -->
		<div class="slider-area2">
			<div class="slider-height2 d-flex align-items-center">
				<div class="container">
					<div class="row">
						<div class="col-xl-12">
							<div class="hero-cap hero-cap2 pt-70 text-center">
								<h2>Packs</h2>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Hero End -->
		<!--? Blog Area Start-->

		<!--? Want To work -->
		<section class="wantToWork-area w-padding"> 
			<div class="container">
				<div class="row align-items-end justify-content-between">
					<div class="col-lg-6 col-md-10 col-sm-10">
						<div class="section-tittle">
							<span>NOS SERVICES POUR VOUS</span>
							<h2>VOUS VOULEZ profitez du notre code promos ?</h2>
						</div>
					</div>
					<div class="col-xl-2 col-lg-2 col-md-3">
						<a href="{{ path('app_abonnement_newClient') }}" class="btn wantToWork-btn f-right">Réserver un abonnement</a>
					</div>
				</div>
			</div>
		</section>
		<!-- Want To work End -->


		<!--Houny yabda  -->
		<section class="services-area pt-100 pb-150 section-bg" data-background="{{ asset('frontOffice/img/gallery/section_bg01.png')}}" style="background-image: url(&quot;assets/img/gallery/section_bg01.png&quot;);">
		<div class="container">
			<div class="row">
			<!--? Want To work -->
			
				<section class="wantToWork-area w-padding">
					<div class="container">
						<div class="row align-items-end justify-content-between">
							<div class="col-lg-6 col-md-10 col-sm-10">
								<div class="section-tittle">
								{% for promotion in promotions %}
									<h2 style="color:white;">
										Code promo :
										{{ promotion.codePromotion}}
									</h2>
									{% endfor %}
							</div>
						</div>

					</div>
				</div>
			</section>
			<div>

				<div class="container">
					<div class="row">
						{% for pack in packs %}
							<div class="col-lg-4 col-md-4 col-sm-6">
								<div class="single-cat single-cat2 text-center mb-50">
									<div class="cat-icon">
										<i class="flaticon-healthcare-and-medical"></i>
									</div>
									<div class="cat-cap">
										<h5>
											<a>{{ pack.typePack  }}</a>
										</h5>
										<p>{{ pack.montantPack }}
											DT.</p>
										<p>{{ pack.dureePack }}
											Mois.</p>
										<p>{{ pack.disponibilitePack }}
											Place(s) disponible(s).</p>
										<p>{{ pack.placesPack }}
											Place(s) réservée(s).</p>
									</div>
									<div class="img-cap">
										<div>
											<a href="{{path('app_abonnement_ajouter',{'id':pack.id})}}">
												Réserver Maintenant
											</a>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
						<div class="pagination">
							{% do packs.setPageRange(3) %}
							{{knp_pagination_render(packs, 'pagination.html.twig')}}
							<br><br><br><br><br>
						</div>
					</div>
				</div>

			</section>
			<!--Houny youfa  -->

			
		</main>
		<div class="popup">
			<div class="popup-content" style>
				<span class="close">&times;</span>


			</div>
		</div>
	{% endblock %}
